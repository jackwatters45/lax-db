---
import { ModeToggle } from '@components/ui/mode-toggle';

const today = new Date();
---

<footer
  class="h-12 border-t border-accent w-full text-sm text-accent-foreground font-inter px-4 md:px-0"
>
  <div class="mx-auto h-full flex items-center justify-between max-w-screen-sm">
    <div class="flex items-center gap-6">
      <a class="hover:underline hover:opacity-90" href="/acknowledgements"
        >acknowledgements</a
      >
      <a class="hover:underline hover:opacity-90" href="/donate">donate</a>
    </div>
    <div class="flex items-center gap-2">
      <span>{today.getFullYear()}</span>
      <ModeToggle client:load />
    </div>
  </div>
</footer>
