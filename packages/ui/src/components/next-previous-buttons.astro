---
import { ChevronLeftIcon, ChevronRightIcon } from 'lucide-react';

export interface PageLink {
  title: string;
  slug: string;
}

interface Props {
  previousPage: PageLink | null;
  nextPage: PageLink | null;
}

const { previousPage, nextPage } = Astro.props;
---

<div class="flex items-center w-full justify-between">
  {
    previousPage ? (
      <a
        class="flex items-center gap-1 no-underline hover:underline underline-offset-4"
        href={previousPage.slug}
      >
        <ChevronLeftIcon className="mt-[2px]" />
        <span>{previousPage.title}</span>
      </a>
    ) : (
      <div />
    )
  }
  {
    nextPage && (
      <a
        class="flex items-center gap-1 no-underline hover:underline underline-offset-4"
        href={nextPage.slug}
      >
        <span>{nextPage.title}</span>
        <ChevronRightIcon className="mt-[2px]" />
      </a>
    )
  }
</div>
