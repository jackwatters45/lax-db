---
import HeaderLink from './ui/header-link.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<header
	class="font-inter bg-background w-full fixed z-50 h-14 max-w-screen-sm px-4 md:px-0"
>
	<nav class="h-full w-full flex items-center justify-between">
		<div>
			<HeaderLink href="/">
				<h1>{title}</h1>
			</HeaderLink>
		</div>
		<div class="flex items-center gap-3 text-sm">
			<HeaderLink class="hover:underline hover:opacity-90" href="/contents"
				>Contents</HeaderLink
			>
			<HeaderLink class="hover:underline hover:opacity-90" href="/wiki"
				>Wiki</HeaderLink
			>
			<HeaderLink class="hover:underline hover:opacity-90" href="/graph"
				>Graph</HeaderLink
			>
		</div>
	</nav>
</header>
